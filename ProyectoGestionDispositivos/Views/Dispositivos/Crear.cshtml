@model ProyectoGestionDispositivos.Models.Entidades.Dispositivo
@{
    ViewData["Title"] = "Crear";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Dispositvo</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Crear" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="NombreDispositivo" class="form-control" placeholder=" Nombre" />
                    <span asp-validation-for="NombreDispositivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <select asp-for="MarcaId" asp-items="Model.Marcas" class="form-control"></select>
                    <span asp-validation-for="MarcaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <select asp-for="TipoMantenimientoId" asp-items="Model.TipoMantenimientos" class="form-control"></select>
                    <span asp-validation-for="TipoMantenimientoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Costo" class="form-control" placeholder="Costo" />
                    <span asp-validation-for="Costo" class="text-danger"></span>
                </div>
                
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
